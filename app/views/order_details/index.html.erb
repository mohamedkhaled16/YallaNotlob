<div class="contact">
  <div class="wrap">
    <div class="section group">

      <div class="col span_2_of_3">
        <div class="contact-form">

          <p id="notice"><%= notice %></p>

          <h1>Listing Order Details</h1>
          <div class="row">
            <div class="col-lg-9">
              <table class="table table-hover">
                <thead>
                <tr>
                  <th>Item</th>
                  <th>Qty</th>
                  <th>Price</th>
                  <th>Comment</th>
                  <th>Notification</th>
                  <th colspan="3"></th>
                </tr>
                </thead>

                <tbody>
                <% @order_details.each do |order_detail| %>
                    <tr>
                      <td><%= order_detail.item %></td>
                      <td><%= order_detail.qty %></td>
                      <td><%= order_detail.price %></td>
                      <td><%= order_detail.comment %></td>
                      <td><%= order_detail.notification %></td>
                      <td><%= link_to 'Show', order_detail %></td>
                      <td><%= link_to 'Edit', edit_order_detail_path(order_detail) %></td>
                      <td><%= link_to 'Destroy', order_detail, method: :delete, data: {confirm: 'Are you sure?'} %></td>
                    </tr>
                <% end %>
                </tbody>
              </table>
            </div>
            <div class="col-lg-1 col-lg-offset-2">
              <div>
                <a class="btn btn-info" style="margin-bottom: 10px">friend invinted click here to show</a>
                <a class="btn btn-info">friend joined click here to show</a>
              </div>
            </div>
          </div>
        </div>

      </div>

      <%= render 'form' %>

    </div>
  </div>
</div>

